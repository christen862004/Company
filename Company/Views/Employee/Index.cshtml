@model List<Employee>
@{
    ViewData["Title"] = "Index";
}
<a asp-action="New" asp-controller="Employee">New</a>
<h1>Index</h1>
<table class="table table-bordered table-hover">
    <tr>
        <td>ID</td>
        <td>Name</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a href="/Employee/Edit/@item.Id" class="btn btn-success">Edit</a>
            </td>

        </tr>
    }
</table>
