@model List<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-hover table-bordered">
    <tr>
        <th>ID</th>
        <th>NAme</th>
    </tr>
    @foreach (Department item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a href="/Department/Details/@item.Id"> Show Details</a>

            </td>
        </tr>
    }
</table>
